{
  "manifest_version": 2,
  "name": "MyEpitech",
  "version": "2.0",
  "description": "Restore the old percentage of My Epitech !",
  "permissions": [
    "*://my.epitech.eu/*",
    "*://api.epitest.eu/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "js": [
        "script.js"
      ],
      "matches": [
        "*://my.epitech.eu/*"
      ]
    }
  ],
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "64": "icon.png",
    "128": "icon.png"
  }
}